<div class="container devise">
  <center><h2>Sign In</h2></center>

  <br/>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, :placeholder => "Email Address" %>
    </div>

    <br/>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
    </div>

    <br/>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <span class="pull-left"><%= f.check_box :remember_me %> Remember Me</span>

        <span class="pull-right"><%= render "devise/shared/links" %></span>
      </div>
    <% end %>

    <br/>
    <br/>

    <div class="actions">
      <%= f.submit "Sign in", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
